@model PDPDay8EF_CF.Models.Product

@{
    ViewData["Title"] = "Thêm mới sản phẩm";
}

<h2>Thêm mới sản phẩm</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Tên sản phẩm</label>
                <input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm..." />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Image" class="control-label">Hình ảnh (URL)</label>
                <input asp-for="Image" class="form-control" placeholder="Nhập link hình ảnh..." />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label">Giá</label>
                <input asp-for="Price" class="form-control" placeholder="Nhập giá sản phẩm..." />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SalePrice" class="control-label">Giá khuyến mãi</label>
                <input asp-for="SalePrice" class="form-control" placeholder="Nhập giá khuyến mãi (nếu có)..." />
                <span asp-validation-for="SalePrice" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label">Trạng thái</label>
                <select asp-for="Status" class="form-control">
                    <option value="1">1</option>
                    <option value="0">0</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Descriptions" class="control-label">Mô tả</label>
                <textarea asp-for="Descriptions" class="form-control" rows="3" placeholder="Nhập mô tả sản phẩm..."></textarea>
                <span asp-validation-for="Descriptions" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CategoryId" class="control-label">Danh mục</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                    <option value="">-- Chọn danh mục --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CreatedDate" class="control-label">Ngày tạo</label>
                <input asp-for="CreatedDate" class="form-control" type="date" />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>

            <div class="form-group d-flex gap-2">
                <input type="submit" value="Thêm" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-danger">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
