@model PDPDay8EF_CF.Models.Product

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h3 class="mb-0"><i class="bi bi-pencil-square me-2"></i> Chỉnh sửa sản phẩm</h3>
        </div>

        <div class="card-body p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <!-- Tên sản phẩm -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control rounded-3 shadow-sm" placeholder="Nhập tên sản phẩm..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Ảnh sản phẩm -->
                <div class="mb-3">
                    <label asp-for="Image" class="form-label fw-bold"></label>
                    <input asp-for="Image" class="form-control rounded-3 shadow-sm" placeholder="Đường dẫn ảnh hoặc URL..." />
                    <span asp-validation-for="Image" class="text-danger"></span>

                    @* Hiển thị ảnh xem trước *@
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        var imgSrc = Model.Image.StartsWith("http")
                            ? Model.Image
                            : Url.Content("~/images/" + Model.Image);

                        <div class="mt-3 text-center">
                            <img src="@imgSrc" alt="Ảnh sản phẩm" class="img-thumbnail rounded-4 shadow-sm" style="max-height: 200px; object-fit: contain;" />
                        </div>
                    }
                </div>

                <!-- Giá gốc -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Price" class="form-label fw-bold"></label>
                        <input asp-for="Price" class="form-control rounded-3 shadow-sm" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <!-- Giá khuyến mãi -->
                    <div class="col-md-6">
                        <label asp-for="SalePrice" class="form-label fw-bold"></label>
                        <input asp-for="SalePrice" class="form-control rounded-3 shadow-sm" />
                        <span asp-validation-for="SalePrice" class="text-danger"></span>
                    </div>
                </div>

                <!-- Trạng thái -->
                <div class="mb-3">
                    <label asp-for="Status" class="form-label fw-bold"></label>
                    <select asp-for="Status" class="form-select rounded-3 shadow-sm">
                        <option value="1">Còn hàng</option>
                        <option value="0">Hết hàng</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>

                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <!-- Mô tả -->
                <div class="mb-3">
                    <label asp-for="Descriptions" class="form-label fw-bold"></label>
                    <textarea asp-for="Descriptions" rows="3" class="form-control rounded-3 shadow-sm" placeholder="Nhập mô tả sản phẩm..."></textarea>
                    <span asp-validation-for="Descriptions" class="text-danger"></span>
                </div>

                <!-- Danh mục -->
                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label fw-bold"></label>
                    <select asp-for="CategoryId" class="form-select rounded-3 shadow-sm" asp-items="ViewBag.CategoryId">
                        <option value="">-- Chọn danh mục --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <!-- Ngày tạo -->
                <div class="mb-3">
                    <label asp-for="CreatedDate" class="form-label fw-bold"></label>
                    <input asp-for="CreatedDate" class="form-control rounded-3 shadow-sm" type="datetime-local" />
                    <span asp-validation-for="CreatedDate" class="text-danger"></span>
                </div>

                <!-- Nút hành động -->
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="bi bi-arrow-left-circle me-1"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-save me-1"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
