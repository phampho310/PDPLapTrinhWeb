@model PDPDay8EF_CF.Models.Product

@{
    ViewData["Title"] = "Xác nhận xóa sản phẩm";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white text-center fs-4 fw-bold">
            Xóa sản phẩm
        </div>

        <div class="card-body">
            <h5 class="text-center text-muted mb-4">
                Bạn có chắc chắn muốn xóa sản phẩm này không?
            </h5>

            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Tên sản phẩm:</div>
                <div class="col-sm-9">@Model.Name</div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Ảnh:</div>
                <div class="col-sm-9">
                    <img src="@Model.Image" alt="@Model.Name" class="img-thumbnail" style="max-width: 150px;">
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Giá:</div>
                <div class="col-sm-9 text-primary fw-semibold">@Model.Price.ToString("N0") ₫</div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Giá khuyến mãi:</div>
                <div class="col-sm-9 text-success fw-semibold">@Model.SalePrice.ToString("N0") ₫</div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Trạng thái:</div>
                <div class="col-sm-9">
                    @if (Model.Status == 1)
                    {
                        <span class="badge bg-success">1 - Kích hoạt</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">0 - Không kích hoạt</span>
                    }
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Mô tả:</div>
                <div class="col-sm-9">@Model.Descriptions</div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">Ngày tạo:</div>
                <div class="col-sm-9">@Model.CreatedDate.ToString("dd/MM/yyyy")</div>
            </div>

            <div class="row mb-4">
                <div class="col-sm-3 fw-bold">Danh mục:</div>
                <div class="col-sm-9">@Model.Category?.Name</div>
            </div>

            <form asp-action="Delete" class="text-center">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4 me-2">
                    <i class="bi bi-trash"></i> Xóa
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
}
