@model PDPDay8EF_CF.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="row g-0">
            <!-- Hình ảnh sản phẩm -->
            @{
                var imgSrc = Model.Image?.StartsWith("http") == true
                ? Model.Image
                : Url.Content("~/images/" + Model.Image);
            }
            <img src="@imgSrc" alt="@Model.Name"
                 class="img-fluid rounded-4 border"
                 style="max-height:300px; object-fit:contain;" />


            <!-- Thông tin sản phẩm -->
            <div class="col-md-8">
                <div class="card-body p-4">
                    <h3 class="card-title mb-3 text-primary fw-bold">@Model.Name</h3>
                    <p class="text-muted mb-4">@Model.Descriptions</p>

                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item">
                            <strong>Giá gốc:</strong>
                            <span class="text-decoration-line-through text-secondary">
                                @Model.Price.ToString("C0")
                            </span>
                        </li>
                        <li class="list-group-item">
                            <strong>Giá khuyến mãi:</strong>
                            <span class="fw-bold text-danger">@Model.SalePrice.ToString("C0")</span>
                        </li>
                        <li class="list-group-item">
                            <strong>Trạng thái:</strong>
                            <span class="badge @(Model.Status == 1 ? "bg-success" : "bg-secondary")">
                                @(Model.Status == 1 ? "Còn hàng" : "Hết hàng")
                            </span>
                        </li>
                        <li class="list-group-item">
                            <strong>Danh mục:</strong> @Model.Category?.Name
                        </li>
                        <li class="list-group-item">
                            <strong>Ngày tạo:</strong> @Model.CreatedDate.ToString("dd/MM/yyyy")
                        </li>
                    </ul>

                    <!-- Nút điều hướng -->
                    <div class="d-flex gap-2 mt-3">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4">
                            <i class="bi bi-pencil-square me-1"></i> Sửa
                        </a>
                        <a asp-action="Index" class="btn btn-secondary px-4">
                            <i class="bi bi-arrow-left-circle me-1"></i> Quay lại danh sách
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
