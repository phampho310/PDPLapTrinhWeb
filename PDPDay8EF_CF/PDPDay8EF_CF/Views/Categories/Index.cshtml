@model IEnumerable<PDPDay8EF_CF.Models.Category>

@{
    ViewData["Title"] = "Danh sách danh mục";
}

<h2>Danh sách danh mục</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Thêm mới danh mục</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>@Html.DisplayNameFor(model => model.CreateDate)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>
                    @if (item.Status == 1)
                    {
                        <span class="text-success fw-bold">Hoạt động</span>
                    }
                    else
                    {
                        <span class="text-danger fw-bold">Ngưng</span>
                    }
                </td>

                <td>@item.CreateDate.ToString("dd/MM/yyyy hh:mm:ss tt")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
