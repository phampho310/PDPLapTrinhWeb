@model IEnumerable<PDPDay6.Models.Category>

<h2>Danh sách danh mục</h2>
<a asp-action="Create" class="btn btn-success mb-2">+ Thêm danh mục</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tên danh mục</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
