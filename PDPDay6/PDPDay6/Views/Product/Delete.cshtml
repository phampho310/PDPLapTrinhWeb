@model PDPDay6.Models.Product
@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<h2 class="text-danger">Xóa sản phẩm</h2>
<h5>Bạn có chắc muốn xóa sản phẩm này không?</h5>

<div class="card p-3 shadow-sm mt-3">
    <dl class="row">
        <dt class="col-sm-3">Tên sản phẩm</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Giá</dt>
        <dd class="col-sm-9">@Model.Price.ToString("N0")</dd>

        <dt class="col-sm-3">Giá khuyến mãi</dt>
        <dd class="col-sm-9">@Model.SalePrice.ToString("N0")</dd>

        <dt class="col-sm-3">Danh mục</dt>
        <dd class="col-sm-9">@Model.Category?.Name</dd>

        <dt class="col-sm-3">Mô tả</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Ảnh</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img src="@Model.Image" width="200" style="border:1px solid #ccc; padding:2px;" />
            }
            else
            {
                <span class="text-muted">Không có ảnh</span>
            }
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
