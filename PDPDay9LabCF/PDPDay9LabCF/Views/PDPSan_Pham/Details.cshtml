@model PDPDay9LabCF.Models.PDPSan_Pham

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="row g-0">
            <!-- Cột ảnh -->
            <div class="col-md-5 text-center p-4 bg-light rounded-start-4">
                @if (!string.IsNullOrEmpty(Model.pdpHinhAnh))
                {
                    <img src="~/images/@Model.pdpHinhAnh" alt="@Model.pdpTenSanPham"
                         class="img-fluid rounded-4 shadow-sm"
                         style="max-height: 350px; object-fit: cover;" />
                }
                else
                {
                    <div class="d-flex align-items-center justify-content-center h-100">
                        <span class="text-muted fst-italic">Không có hình ảnh</span>
                    </div>
                }
            </div>

            <!-- Cột thông tin -->
            <div class="col-md-7 p-4">
                <h3 class="fw-bold text-primary mb-3">@Model.pdpTenSanPham</h3>
                <hr />

                <dl class="row mb-3">
                    <dt class="col-sm-4 text-secondary">Mã sản phẩm:</dt>
                    <dd class="col-sm-8">@Model.pdpMaSanPham</dd>

                    <dt class="col-sm-4 text-secondary">Loại sản phẩm:</dt>
                    <dd class="col-sm-8">@Model.pdpLoaiSanPhamId</dd>

                    <dt class="col-sm-4 text-secondary">Số lượng tồn:</dt>
                    <dd class="col-sm-8">@Model.pdpSoLuong</dd>

                    <dt class="col-sm-4 text-secondary">Đơn giá:</dt>
                    <dd class="col-sm-8 text-danger fw-bold">
                        @String.Format("{0:N0} ₫", Model.pdpDonGia)
                    </dd>
                </dl>

                <div class="mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.pdpId" class="btn btn-warning me-2">
                        <i class="bi bi-pencil-square"></i> Sửa
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
}
