@model PDPDay9LabCF.Models.PDPSan_Pham

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<div class="container mt-4">
    <div class="card border-0 shadow-lg rounded-4 p-4">
        <h3 class="text-danger mb-3">
            <i class="bi bi-trash-fill"></i> Xóa sản phẩm
        </h3>
        <hr />

        <h5 class="text-muted mb-4">Bạn có chắc muốn xóa sản phẩm sau không?</h5>

        <div class="row">
            <div class="col-md-5 text-center">
                @if (!string.IsNullOrEmpty(Model.pdpHinhAnh))
                {
                    <img src="~/images/@Model.pdpHinhAnh"
                         alt="@Model.pdpTenSanPham"
                         class="img-fluid rounded shadow-sm mb-3"
                         style="max-height:300px; object-fit:cover;" />
                }
                else
                {
                    <div class="text-muted fst-italic">Không có ảnh</div>
                }
            </div>

            <div class="col-md-7">
                <dl class="row">
                    <dt class="col-sm-4 fw-bold">Mã sản phẩm</dt>
                    <dd class="col-sm-8">@Model.pdpMaSanPham</dd>

                    <dt class="col-sm-4 fw-bold">Tên sản phẩm</dt>
                    <dd class="col-sm-8">@Model.pdpTenSanPham</dd>

                    <dt class="col-sm-4 fw-bold">Số lượng</dt>
                    <dd class="col-sm-8">@Model.pdpSoLuong</dd>

                    <dt class="col-sm-4 fw-bold">Đơn giá</dt>
                    <dd class="col-sm-8">@Model.pdpDonGia.ToString("N0") đ</dd>

                    <dt class="col-sm-4 fw-bold">Loại sản phẩm</dt>
                    <dd class="col-sm-8">@Model.pdpLoaiSanPhamId</dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="pdpId" />

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-danger me-2">
                    <i class="bi bi-trash"></i> Xóa
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
}
