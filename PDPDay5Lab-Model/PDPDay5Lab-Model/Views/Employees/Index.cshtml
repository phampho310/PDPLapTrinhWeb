@model IEnumerable<PDPDay5Lab_Model.Models.Employee>

@{
    ViewData["Title"] = "Danh sách nhân viên";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-primary">Danh sách nhân viên</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Thêm nhân viên
    </a>
</div>

<table class="table table-hover table-bordered shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Họ tên</th>
            <th>Giới tính</th>
            <th>Điện thoại</th>
            <th>Email</th>
            <th>Lương</th>
            <th>Trạng thái</th>
            <th class="text-center">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FullName</td>
                <td>@item.Gender</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>@item.Salary.ToString("C0")</td>
                <td>
                    @if (item.Status)
                    {
                        <span class="badge bg-success">Đang làm</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Nghỉ</span>
                    }
                </td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
